<body>
<h1>Your shopping cart</h1>


{{>header}}


<br><br>
<div class="urOrders">
  <form action="/buyTea" method="post">

    {{#each teas}}
      <div>
        <p class="desc2">Name: {{this.tea}}</p>
        <img class="img2" src="/img/{{this.image}}">
          <div class="desc">
            <p class="desc2"><br>A {{this.description}}<br>Price: {{this.price}} <br>Quantity: {{this.quantity}}</p>
            <a class="navBar" href="/shoppingCart?deleteItem={{this.id}}">delete</a>
          </div>
      </div>
    {{/each}}
            <button class="navBar" type="submit">buy</button>
  </form>
</div>


